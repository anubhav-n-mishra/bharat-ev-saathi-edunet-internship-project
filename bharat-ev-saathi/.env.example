# Bharat EV Saathi - Environment Variables
# Copy this file to .env and fill in your actual API keys

# ==============================================
# GOOGLE GEMINI API (RECOMMENDED - FREE TIER)
# ==============================================
# Get your free API key from: https://ai.google.dev/
# Free tier: 15 requests/minute, 1500 requests/day
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================================
# OPTIONAL: Other AI APIs
# ==============================================
# OpenAI API (if you want to use GPT models)
# OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API (for open-source models)
# HF_API_KEY=your_huggingface_token_here

# Groq API (fast inference)
# GROQ_API_KEY=your_groq_api_key_here

# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_NAME=Bharat EV Saathi
APP_VERSION=1.0.0
DEBUG=False

# ==============================================
# DATA PATHS
# ==============================================
DATA_DIR=data
MODELS_DIR=models
LOGS_DIR=logs

# ==============================================
# MODEL SETTINGS
# ==============================================
ML_MODEL_PATH=models/ev_recommendation_model.pkl
USE_CACHE=True

# ==============================================
# UI SETTINGS
# ==============================================
DEFAULT_LANGUAGE=English
ENABLE_HINDI=True
THEME=light

# ==============================================
# EXTERNAL APIs (Optional)
# ==============================================
# Weather API for range prediction
# WEATHER_API_KEY=your_weather_api_key

# Google Maps API for charging stations
# GOOGLE_MAPS_API_KEY=your_maps_api_key
